@model IEnumerable<Sehel_MVCGiris.Models.Project>
@{
    ViewBag.Title = "Index";

}
<h2>Projeler</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Yeni Proje</a>
    <table class="table table-hover table-striped table-condensed" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Resim</th>
                <th>@Html.DisplayNameFor(model => model.CategoryId)</th>

                <!--    <th>@Html.DisplayNameFor(model => model.Body)</th>-->
                <th>@Html.DisplayNameFor(model => model.Description)</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { // Html.DisplayNameFor
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td> <img src="/Uploads/@item.Photo" height="50" width="50" class="card-img-top" /> </td>
                <td>@Html.DisplayFor(modelItem=>item.Category.Name)</td>
                <!--    <th>@item.Body</th><!--2 şekilde yapabiliyosun-->
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-success btn-sm ">Düzenle</a>
                    <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz');">Sil</a>
                </td>

            </tr>
            }
        </tbody>
            </table>

            <h2>Index</h2>




