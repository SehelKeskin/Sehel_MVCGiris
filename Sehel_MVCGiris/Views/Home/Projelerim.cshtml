@model IEnumerable<Sehel_MVCGiris.Models.Project>

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
    <li class="breadcrumb-item active">Projelerim</li>
</ol>
<div class="row">
    @foreach (var item in Model)
    {


        <div class="col-md-4">
            <div class="card d-block" style="height: 500px">
                <img src="/image/@item.Photo" class="card-img-top" alt="@item.Title">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="#" class="btn btn-primary"
                       style="position: absolute; right:15px; bottom: 10px">Ayrıntılar</a>
                </div>
            </div>
        </div>

    }

    @if (Model.Count()==0)
    {
        <div class="col-md-12">
            <div class="alert alert-danger">YOk</div>
            </div>
    }
    {

    }


    </div>

